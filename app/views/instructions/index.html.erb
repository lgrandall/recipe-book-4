<p id="notice"><%= notice %></p>

<h1>Instructions</h1>

<table>
  <thead>
    <tr>
      <th>Short hand name</th>
      <th>Description</th>
      <th>Time acount</th>
      <th>Time amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instructions.each do |instruction| %>
      <tr>
        <td><%= instruction.short_hand_name %></td>
        <td><%= instruction.description %></td>
        <td><%= instruction.time_amount %></td>
        <td><%= link_to 'Show', instruction %></td>
        <td><%= link_to 'Edit', edit_instruction_path(instruction) %></td>
        <td><%= link_to 'Destroy', instruction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

